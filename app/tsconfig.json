{
  "compilerOptions": {
    "moduleResolution": "node",
    "pretty": false,
    "sourceMap": true,
    "target": "es5",
    "module": "CommonJS",
    "outDir": "./dist-app",
    "baseUrl": "./src",
    "strict": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": false,
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2018", "dom"]
  },
  "include": [
    "./src/**/*.ts",
  ],
  "exclude": [
    "./node_modules"
  ]
}